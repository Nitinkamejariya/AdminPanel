<style>
    .btn {
      border: 1px solid black;
      background-color: white;
      color: black;
       /* padding: 14px 28px;  */
      font-size: 12px;
      cursor: pointer;
    }
    
    
    .success {
      border-color: #04AA6D;
      color: green;
    }
    
    .success:hover {
      background-color: #04AA6D;
      color: white;
    }
    
   
    .danger {
      border-color: #f44336;
      color: red;
    }
    
    .danger:hover {
      background: #f44336;
      color: white;
    }
    
    
  
    </style>
  <section id="main-content">
      <section class="wrapper">
      <% if(flash.success.length > 0 && flash.success){%> 
        <div class="content">
        <div class="alert alert-success alert-white rounded">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
            <div class="icon"><i class="fa fa-check"></i></div>
            <%= flash.success%>
        </div>
    </div>
    <% } %>
          <div class="table-agile-info">
   <div class="panel panel-default">
      <div class="panel-heading">
     BOOK RECORD
      </div>
      <div>
        <table class="table" ui-jq="footable" ui-options='{
          "paging": {
            "enabled": true
          },
          "filtering": {
            "enabled": true
          },
          "sorting": {
            "enabled": true
          }}'>
          <thead>
            <tr>
              
              <th> Front Image</th>
              <th>Title</th>
              <th>Author</th>
              <th>Publisher</th>
              <th>Category</th>
              <th>Pages</th>
              <th>Description</th>
              <th>Publish Date</th>
              <th>Rating</th>
              <th>Action</th>
             
            </tr>
          </thead>
          <tbody>
              <%
                  for(var B of AllBook){%> 
                          <tr>
                              <td><img src="<%=B.frontimage%>" height="50"></td>
                              <td><%=B.title%></td>
                              <td><%=B.author%></td>
                              <td><%=B.publisher%></td>
                              <td><%=B.category%></td>
                              <td><%=B.pages%></td>
                              <td><%=B.description%></td>
                              <td><%=B.date%></td>
                              <td><%=B.rating%></td>
                              
                             
                              <td><a class=" btn success" href="updateBook/?id=<%=B.id%>">Edit</a></td>
                              <td><a class="btn danger" href="removeBook/?id=<%=B.id%>">Remove</a></td>
                          </tr>
                      <%}
              %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  </section>
  
  
  